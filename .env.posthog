# PostHog Environment Variables
# Copy this file to .env.posthog.local and update with your values

# Database Passwords
POSTHOG_DB_PASSWORD=your_secure_postgres_password
POSTHOG_CLICKHOUSE_PASSWORD=your_secure_clickhouse_password
POSTHOG_REDIS_PASSWORD=your_secure_redis_password

# PostHog Configuration
POSTHOG_SECRET_KEY=your_very_secure_secret_key_here_minimum_50_chars
POSTHOG_SITE_URL=http://localhost:8123

# Ports
POSTHOG_WEB_PORT=8123
POSTHOG_HTTP_PORT=80
POSTHOG_HTTPS_PORT=443

# Security
POSTHOG_SECURE_COOKIES=false
POSTHOG_DISABLE_SSL_REDIRECT=true

# Email (optional)
POSTHOG_EMAIL_ENABLED=false
POSTHOG_EMAIL_HOST=smtp.gmail.com
POSTHOG_EMAIL_PORT=587
POSTHOG_EMAIL_USE_TLS=true
POSTHOG_EMAIL_USER=
POSTHOG_EMAIL_PASSWORD=
POSTHOG_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Healthcare-specific settings
POSTHOG_RECORDINGS_TTL_WEEKS=2  # Keep recordings for 2 weeks only for HIPAA compliance

# Client Configuration
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=http://localhost:8123