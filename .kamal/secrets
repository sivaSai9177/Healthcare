# Kamal Secrets Configuration
# Copy this file to .kamal/secrets.local and fill in your values
# DO NOT commit the actual secrets file to git!

# Deployment Configuration
DEPLOY_SERVER_IP=your.server.ip.here
STAGING_SERVER_IP=your.staging.ip.here
DEPLOY_DOMAIN=your-domain.com
DEPLOY_EMAIL=admin@your-domain.com

# Docker Registry
DOCKER_REGISTRY_USERNAME=your-docker-username
DOCKER_REGISTRY_PASSWORD=your-docker-password

# Database
DATABASE_URL=postgresql://user:password@host:5432/database
POSTGRES_USER=healthcare_prod
POSTGRES_PASSWORD=your-secure-password

# Redis
REDIS_PASSWORD=your-redis-password

# Authentication
BETTER_AUTH_SECRET=your-very-long-random-secret-minimum-32-chars
BETTER_AUTH_URL=https://your-domain.com

# OAuth Providers
AUTH_GOOGLE_ID=your-google-oauth-client-id
AUTH_GOOGLE_SECRET=your-google-oauth-client-secret

# PostHog Analytics
POSTHOG_API_KEY=your-posthog-api-key
EXPO_PUBLIC_POSTHOG_API_KEY=your-posthog-project-api-key
POSTHOG_HOST=https://app.posthog.com
STAGING_POSTHOG_PROJECT_ID=your-staging-project-id

# Email Service
EMAIL_FROM=noreply@your-domain.com
RESEND_API_KEY=your-resend-api-key

# Optional: Monitoring
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Optional: Backup
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret