#!/bin/bash
# Pre-connect hook - Run before connecting to servers

echo "üîå Pre-connect: Verifying server connectivity..."

# Check if required environment variables are set
required_vars=("DEPLOY_SERVER_IP" "DEPLOY_DOMAIN" "DOCKER_REGISTRY_USERNAME")

for var in "${required_vars[@]}"; do
    if [ -z "${!var}" ]; then
        echo "‚ùå Error: $var is not set"
        exit 1
    fi
done

echo "‚úÖ Environment variables verified"

# Test SSH connection to deployment server
if ssh -o ConnectTimeout=5 -o BatchMode=yes "root@${DEPLOY_SERVER_IP}" "echo '‚úÖ SSH connection successful'"; then
    echo "‚úÖ Server connectivity confirmed"
else
    echo "‚ùå Cannot connect to server ${DEPLOY_SERVER_IP}"
    exit 1
fi